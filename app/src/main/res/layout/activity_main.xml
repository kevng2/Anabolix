<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/kevin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pedometer"
        app:layout_constraintTop_toTopOf="@+id/main_layout"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/sam_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sam's Button!"

        app:layout_constraintTop_toBottomOf="@+id/kevin_button"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/lewis_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintTop_toBottomOf="@+id/tiffany_button"
        tools:layout_editor_absoluteX="80dp" />

    <Button
        android:id="@+id/tiffany_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiffany's Button"
        app:layout_constraintTop_toBottomOf="@+id/sam_button"
        tools:layout_editor_absoluteX="80dp" />


    <Button
        android:id="@+id/carter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carter's Button"
        app:layout_constraintTop_toBottomOf="@+id/lewis_button"
        tools:layout_editor_absoluteX="80dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>