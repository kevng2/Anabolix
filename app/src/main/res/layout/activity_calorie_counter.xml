<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/CalorieDisplay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="5dp"
        android:text="@string/current_calories"
        android:textColor="#1649EC"
        android:textSize="32sp" />

    <Button
        android:id="@+id/addCalories"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#0734B9"
        android:text="+"
        android:textSize="24sp"
        app:iconTint="#0734B9"
        tools:text="+" />

    <Button

        android:id="@+id/subtractCalories"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/editCalorie"
        android:backgroundTint="#0734B9"
        android:text="-"
        android:textSize="24sp"
        app:iconTint="#0734B9"
        tools:text="-" />

    <EditText
        android:id="@+id/editCalorie"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/addCalories"
        android:editable="true"
        android:ems="10"
        android:hint="Enter Calorie Amount"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:layout_above="@+id/editCalorie"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="5dp"
        android:text="@string/add_remove_calories"
        android:textColor="#1649EC"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="Cake"
        app:srcCompat="@drawable/cake" />

    <TextView
        android:id="@+id/CalorieDisplay"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="5dp"
        android:editable="false"
        android:gravity="center"
        android:textSize="30sp" />
</RelativeLayout>